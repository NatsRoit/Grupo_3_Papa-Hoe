<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>

            <main>
                <div class="login-register">
                    <h2>Crear Cuenta</h2>
                    <div class="login-img">
                        <!-- <img id="shaka" src="/img/shakasign_99700.svg" alt="shaka"> -->
                        <img src="/images/brand/PapaHoe-ELEMENTS-Lalinea.png" alt="LaLinea">
                    </div>

                    <form class="login-formulario" action="/views/register.html" method="post">
                        <div class="login-input nombre">
                            <label for="nombre">Nombre</label>
                            <input type="text" name="nombre" id="nombre" placeholder="Nombre" required>
                        </div>
                        <div class="login-input apellido">
                            <label for="apellido">Apellido</label>
                            <input type="text" name="apellido" id="apellido" placeholder="Apellido" required>
                        </div>
                        <div class="login-input">
                            <label for="usuario">Usuario</label>
                            <input type="text" name="usuario" id="usuario" placeholder="Nombre de usuario" required>
                        </div>
                        <div class="login-input">
                            <label for="email">Email</label>
                            <input type="email" name="email" id="email" placeholder="Email" required>
                        </div>
                        <div class="login-input">
                            <label for="contraseña">Contraseña</label>
                            <input type="password" name="contraseña" id="contraseña" placeholder="Contraseña" required>
                        </div>
                        <div class="submit-button">
                            <button class="submit-button" type="submit">Crear</button>
                            <br><br><br>
                        </div>
                    </form>
                </div>
            </main>
            <%- include("../partials/footer") %>
    </body>

</html>