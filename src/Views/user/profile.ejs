<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>


            <header class="section-header">
                <img id="carrousel-image-1" src="/images/stock/guille-unsplash.jpg" alt="PapaHoe foto1">
            </header>

            <main class="productDetail">
                <section class="main-container">
                    <div class="left-wrapper">
                        <div class="img-slider">
                            <img src="/images/usuarios/<%= user.avatar %>" alt="imagen de perfil">
                        </div>
                    </div>

                    <div>
                        <div>
                            <h2><%= 'Hola ' + user.nombre + ' ' + user.apellido%></h2>
                            <br><br>
                        </div>

                        <div>
                            <p><%= user.nombre%> <%= user.apellido%></p>
                            <p><%= user.email%></p>
                            <p><%= user.direccion%></p>
                            <p><%= user.telefono%></p>
                            <p><%= user.localidad%> <%= user.codigoPostal%></p>
                            <br><br>
                            <hr>
                            <br><br>
                            <div>
                                <a href="/user/edit/<%= user.id%>">EDITAR</a>
                            </div>
                        </div>
                    </div>
                </section>

            </main>
            <%- include("../partials/footer") %>
    </body>

</html>