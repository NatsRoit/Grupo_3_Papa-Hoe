<!DOCTYPE html>
<html lang="en">

<%- include("../partials/head") %>

    <body>
        <%- include("../partials/header") %>

            <main>
                <div class="login-register">
                    <h2>Nuevo Producto</h2>
                    <div>
                        <!-- <img id="shaka" src="/img/shakasign_99700.svg" alt="shaka"> -->
                        <img src="/images/brand/LOGO-PapaHoe-LogoWord.png" alt="Logo">
                    </div>

                    <div class="login-formulario">
                        <form action="/views/admin/create" method="post">
                            <div class="NP-1">
                                
                                <div class="login-input">
                                    <label for="titulo">Nombre</label>
                                    <input type="text" name="titulo" id="titulo" placeholder="titulo" required>
                                </div>
                                <div class="login-input">
                                    <label for="category">Category</label>
                                    <input type="text" name="category" id="category" placeholder="category" required>
                                </div>
                                <div class="login-input">
                                    <label for="sub-category">Sub-Category</label>
                                    <input type="text" name="sub-category" id="sub-category" placeholder="sub-category" required>
                                </div>
                                </div>
                                <div class="NP-1">
                                    <div class="login-input">
                                        <label for="brand">Marca del producto</label>
                                        <input type="text" name="brand" brand="brand" placeholder="brand" required>
                                    </div>
                                    <div class="login-input">
                                        <label for="model">Model</label>
                                        <input type="text" name="model" id="model" placeholder="model" required>
                                    </div>
                                    <div class="login-input">
                                        <label for="price">Price</label>
                                        <input type="text" name="price" id="price" placeholder="Price" required>
                                        </div>
                                        <div>
                                        <label for="discount">Discount</label>
                                        <input type="text" name="discount" id="discount" placeholder="discount" required>
                                    </div>
                                    </div>
                            <div class="login-input">
                                <label for="descripction">Descripción</label>
                                <textarea class="NP-desc" type="text" name="descripction" id="descripction" placeholder="Descripción" required></textarea>
                            </div>
                            <div class="login-input">
                                <label for="features">Features</label>
                                <textarea class="NP-desc" type="text" name="features" id="features" placeholder="Features" required></textarea>
                            </div>
                            <div class="login-input">
                                <label for="hability">Hability</label>
                                <select name="hability" id="hability">
                                    <option value="principiante">Principiante</option>
                                    <option value="intermedio">Intermedio</option>
                                    <option value="experto">Experto</option>
                                </select>             
                            </div>
                            <div class="login-input">
                                <label for="dimensions">Dimensions</label>
                                <select name="dimensions" id="dimensions">
                                    <option value="1">5'10--19 1/2--2 9/16--31</option>
                                    <option value="2">5'11--19 5/8--2 5/8--32</option>
                                    <option value="3">6'0--19 3/4--2 11/16--33</option>
                                    <option value="4">6'0--19 3/4--2 11/16--33</option>
                                </select>
                            </div>
                            <div class="login-input">
                                <label for="finSystem">Fin System</label>
                                <select name="finSystem" id="finSystem">
                            <option value="5">CS SII</option>
                            <option value="6">Futures</option>
                        </select>                                    
                            </div>        
                            <div class="login-input">
                                <label for="img">Imagen del Producto</label>
                                <input type="file" name="imageProduct" id="imageProduct" placeholder="Imagen del Producto"
                                    required>
                            </div>
                            <div>
                                <button class="submit-button" type="submit">Crear</button>
                                <br><br><br>
                            </div>
                        </form>
                    </div>
                </div>
            </main>
            <%- include("../partials/footer") %>
    </body>

</html>